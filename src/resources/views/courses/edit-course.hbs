<div class="mt-4">
    <h3>Edit Course</h3>
    <form method="POST" action="/courses/update/{{course._id}}?_method=PATCH">
        <div class="mb-3">
            <label for="name" class="form-label">Course Name</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name" placeholder="Enter course name">
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">Video Id</label>
            <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" name="videoId" placeholder="Enter video id">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3">{{course.description}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>